---
import { WHITELISTS } from '@email.reciever/consts/white-lists'

export type Keys = Lowercase<keyof typeof WHITELISTS>

export const backgrouds: Record<Keys, [start: string, end: string]> = {
  insidergithub: ['rgb(0 0 0 / 0.2)', 'rgb(255 255 255 / 0.2)'],
  tyler: ['rgb(243 139 163 / 0.2)', 'rgb(237 32 61 / 0.2)'],
  reactdigest: ['rgb(165 243 252 / 0.2)', 'rgb(6 182 212 / 0.2)'],
  alexkondov: ['rgb(0 0 0 / 0.2)', 'rgb(255 255 255 / 0.2)'],
  arcupdate: ['rgb(49 57 251 / 0.2)', 'rgb(150 196 255 / 0.2)'],
  cloudflareblog: ['rgb(246 130 31 / 0.2)', 'rgb(251 173 65 / 0.2)'],
  mediumcom: ['rgb(0 0 0 / 0.2)', 'rgb(255 255 255 / 0.2)'],
  modular: ['rgb(255 176 46 / 0.2)', 'rgb(255 103 35 / 0.2)'],
  producthunt: ['rgb(254 246 242 / 0.2)', 'rgb(255 97 84 / 0.2)'],
  zhihu: ['rgb(93 191 255 / 0.2)', 'rgb(24 175 255 / 0.2)'],
  ajiang: ['rgb(93 191 255 / 0.2)', 'rgb(24 175 255 / 0.2)'],
  javascriptweekly: ['rgb(254 195 20 / 0.2)', 'rgb(247 223 30 / 0.2)'],
  nodeweekly: ['rgb(108 166 41 / 0.2)', 'rgb(205 235 197 / 0.2)'],
  reactstatus: ['rgb(165 243 252 / 0.2)', 'rgb(6 182 212 / 0.2)'],
  frontendfocus: ['rgb(165 243 252 / 0.2)', 'rgb(6 182 212 / 0.2)'],
}

interface Props {
  type: Keys
  url: string
}

const { type, url } = Astro.props

const [start, end] = backgrouds[type] ?? ['rgb(165 243 252 / 0.2)', 'rgb(6 182 212 / 0.2)']
---

<a
  class="text-sm text-neutral-500 dark:text-neutral-300 w-max py-1.5 px-3 rounded-3xl inline-flex bg-gradient-to-br from-[var(--badge-start)] from-10% via-[var(--badge-end)] via-40% to-transparent"
  target="_blank"
  href={url}
  referrerpolicy="no-referrer"><slot /></a
>

<style define:vars={{ 'badge-start': start, 'badge-end': end }}></style>
